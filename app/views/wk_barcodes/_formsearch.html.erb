<div class="height400">
  <table class="fancyTable" id="myTable" cellpadding="0" cellspacing="0">
    <thead>
      <tr>
        <th><%= t(:wid, :scope=>[:activerecord,:attributes,:wk_barcode]) %></th>
        <th><%= t(:site, :scope=>[:activerecord,:attributes,:wk_barcode]) %></th>
        <th><%= t(:scandate, :scope=>[:activerecord,:attributes,:wk_barcode]) %></th>
        <th><%= t(:scantime, :scope=>[:activerecord,:attributes,:wk_barcode]) %></th>
        <th>功能</th>
      </tr>
    </thead>

    <tbody>
      <% @results_where.each do |result| %>
        <tr>
          <td><%= result.wid %></td>
          <td><%= result.site %></td>
          <td><%= result.scandate %></td>
          <% if(result.scantime!=nil) %>
            <td><%= result.scantime.strftime("%T")     %></td>
          <% else %>
            <td></td>
          <% end %>
          <td><%= link_to '刪除', result, method: :delete, data: { confirm: '確定嗎？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>



<script type="text/javascript">
  $('#myTable').fixedHeaderTable({ 
    footer: true,
    cloneHeadToFoot: true,
    altClass: 'odd'
  });
</script>
