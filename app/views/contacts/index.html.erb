<p id="notice"><%= notice %></p>

<p style='color:#ffffff;font-size:16px;font-family:PingFang-SC-Medium;'>當前位置: 管理系統 > 留言清單</p>

<div style='background:#333333;width:1024px;height:30px;color:#ffffff;font-size:18px;font-family:PingFang-SC-Medium;text-align:center;'>留言清單</div>

<table class="table">
  <thead>
    <tr style='background:#f4f4f4;color:#333333;font-size:14px;font-family:MicrosoftJhengHeiRegular;'>
      <th><%= t(:name, :scope=>[:activerecord,:attributes,:contact]) %></th>
      <th><%= t(:phone, :scope=>[:activerecord,:attributes,:contact]) %></th>
      <th><%= t(:email, :scope=>[:activerecord,:attributes,:contact]) %></th>
      <th><%= t(:message, :scope=>[:activerecord,:attributes,:contact]) %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr style='background:#f4f4f4;color:#333333;font-size:14px;font-family:MicrosoftJhengHeiRegular;'>
        <td><%= contact.name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td><%= contact.message %></td>
        <td><%= link_to '詳細', contact %></td>
        <td><%= link_to '修改', edit_contact_path(contact) %></td>
        <td><%= link_to '刪除', contact, method: :delete, data: { confirm: '確定嗎？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

